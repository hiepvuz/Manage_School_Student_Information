<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_student_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="20dp">

    <ImageView
        android:id="@+id/avt"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/std"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <TextView
        android:id="@+id/tv_student_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name_student"
        android:textSize="15sp"
        android:layout_marginStart="10dp"

        app:layout_constraintStart_toEndOf="@id/avt"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_student_semester"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/student_semester"
        android:textSize="13sp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/avt"
        app:layout_constraintTop_toBottomOf="@id/tv_student_name" />

    <ImageView
        android:id="@+id/btn_delete_student"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_baseline_delete_24"
        app:layout_constraintStart_toEndOf="@id/tv_student_name"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>